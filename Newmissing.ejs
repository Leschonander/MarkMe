<% include partials/header %>

<h1> Add new missing person </h1>

<form action="/missing/new" method="POST" class='ui form'>
    <div class='field'>
        <label>First Name</label>
        <input type = "text" name = "newmissingfname" placeholder="first name">
    </div>
    <div class='field'>
        <label>Last Name</label>
        <input type = "text" name = "newmissinglname" placeholder="last name"> 
    <div class='field'>
        <label>Date Seen</label>
        <input type="text" name = "datesighted" placeholder="mm/dd/year">
    </div>
    <div class='field'>
        <label>Tips</label>
        <textarea name = "tips" placeholder="Any information?"></textarea>
    </div>
    <input class='ui red basic big button' type='submit'>

</form>

